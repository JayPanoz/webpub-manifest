{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://readium.org/webpub-manifest/schema/contributor-object.schema.json",
  "title": "Contributor Object",
  "type": "object",
  "properties": {
    "name": {
      "type": ["string", "object"]
    },
    "identifier": {
      "type": "string",
      "format": "uri"
    },
    "sortAs": {
      "type": "string"
    },
    "role": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "position": {
      "type": "number"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    }
  },
  "required": ["name"]
}
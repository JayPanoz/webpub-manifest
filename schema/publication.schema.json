{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://readium.org/webpub-manifest/schema/publication.schema.json",
  "title": "Readium Web Publication Manifest",
  "properties": {
    "metadata": {
      "type": "object",
      "$ref": "http://readium.org/webpub-manifest/schema/metadata.schema.json"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    },
    "readingOrder": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    }
  },
  "required": ["metadata", "links", "readingOrder"],
  "allOf": [
    {
      "properties": {
        "readingOrder": {
          "items": {
            "required": ["type"]
          }
        }
      }
    },
    {
      "properties": {
        "resources": {
          "items": {
            "required": ["type"]
          }
        }
      }
    }
  ]
}
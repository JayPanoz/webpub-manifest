{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://readium.org/webpub-manifest/schema/publication.schema.json",
  "title": "Readium Web Publication Manifest",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "string",
          "format": "uri"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "published": {
          "type": "string",
          "format": "date"
        },
        "language": {
          "type": ["string", "array"],
          "items": {
            "type": "string"
          }
        },
        "sort_as": {
          "type": "string"
        },
        "direction": {
          "type": "string",
          "enum": ["rtl", "ltr", "auto"]
        },
        "description": {
          "type": "string"
        },
        "duration": {
          "type": "number"
        },
        "numberOfPages": {
          "type": "integer"
        }
      },
      "required": ["identifier"]
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    },
    "spine": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    }
  },
  "required": ["metadata", "links", "spine"]
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://readium.org/webpub-manifest/schema/publication.schema.json",
  "title": "Readium Web Publication Manifest",
  "properties": {
    "metadata": {
      "$ref": "http://readium.org/webpub-manifest/schema/metadata.schema.json"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    },
    "readingOrder": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    }
  },
  "required": ["metadata", "links", "readingOrder"],
  "additionalProperties": {
    "$ref": "http://readium.org/webpub-manifest/schema/subcollection.schema.json"
  },
  "allOf": [
    {
      "description": "All resources listed in the reading order should contain a media type.",
      "properties": {
        "readingOrder": {
          "items": {
            "required": ["type"]
          }
        }
      }
    },
    {
      "description": "All resources listed in the publication should contain a media type.",
      "properties": {
        "resources": {
          "items": {
            "required": ["type"]
          }
        }
      }
    },
    {
      "description": "A publication must contain at least one self link.",
      "properties": {
        "links": {
          "contains": {
            "properties": {
              "rel": {
                "anyOf": [
                  {
                    "type": "string",
                    "const": "self"
                  },
                  {
                    "type": "array",
                    "contains": {
                      "const": "self"
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}